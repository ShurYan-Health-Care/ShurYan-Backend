{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Information",
            "Microsoft.EntityFrameworkCore.Database.Command": "Information",
            "Microsoft.EntityFrameworkCore": "Information"
        }
    },

    "ConnectionStrings": {
        "DefaultConnection": "Server = .; Database = ShuryanDB; Integrated Security = SSPI; TrustServerCertificate = True; MultipleActiveResultSets = True"
    },

    "JwtSettings": {
        // A different key, less complicated key to development
        "SecretKey": "ShuryanDevelopmentSecretKey2024ForTestingOnly!@#$%",
        "ExpiryInHours": 72 // A 3-day token to make it easier for us to develop
    },

    // Development settings
    "DevSettings": {
        "EnableSwagger": true,
        "EnableDetailedErrors": true,
        "SeedTestData": true, // We'll set up a demo
        "MockExternalServices": true // We run fake services
    }
}
